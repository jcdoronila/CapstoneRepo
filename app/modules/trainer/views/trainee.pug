        .row.content-panel
          .col-md-4.profile-text.mt.mb.centered
            h4 Gold - Interbranch
            h6 Membership
            h4 5
            h6 Sessions Left
            h4 10
            h6 Sessions Done
          .col-md-4.profile-text
            h3 John Doe
            h6
              | Gold - Interbranch
