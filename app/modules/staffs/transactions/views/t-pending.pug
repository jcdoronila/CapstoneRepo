include ../../../../templates/staff-head

block main
	section#main-content
		section.wrapper.site-min-height
			.row.mt
				.col-md-12
					.content-panel
						.container-fluid
							table.table.table-striped.table-advance.table-hover
								h4
									| All Pending Requests
								thead
									tr
										th
											i.fa.fa-user
											|  Name
										th
											i.fa.fa-edit
											|  Action
									tbody 
										tr 
											td John Doe
											td 
												button.btn.btn-info.btn-xs(type='button', data-toggle='modal', data-target='#viewmodal' )
													i.fa.fa-search
												button#edit.btn.btn-success.btn-xs(data-toggle='modal', data-trigger='hover', data-placement='top', data-content='Accept', data-target='#code')
													i.fa.fa-check
												button.btn.btn-danger.btn-xs(data-toggle='modal', data-trigger='hover', data-placement='top', data-content='Reject')
													i.fa.fa-times
				// /content-panel

			// VIEW
			#viewmodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
				.modal-dialog
					.modal-content
						.modal-header
							button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
							h4#myModalLabel.modal-title View Request
						form(action='', method='POST')
							.modal-body
								.container-fluid
									.container-fluid
										.row
											.col-md-6
												h5
													b Name: 
													span John Doe
													br
													br
													b Gender: 
													span Male
													br
													br
													b Birth date: 
													span 01/01/1999
													br
													br
													b Address: 
													span Blk 19 Lot 4 Tondo City
													br
													br
													b Mobile Phone Number: 
													span 099999999
													br
													br
													b Email: 
													span john@doe.com
													br
													br
											.col-md-6
												h5
													b Membership: 
													span Gold - Interbranch
													br
													br
													b Branch: 
													span Sta. Mesa City
													br
													br
													b Interest: 
													span Weight Loss
													br
													br
													b Student?:  
													span Yes
													br
													br
										hr
										.row
											.col-md-12
												b ID Given:
												br
												#is-not-student
													| None
												#is-student
													img(src='../assets/img/id-sample.jpg', width='200x;', style='margin-left:30%;')
												br
												br
								
							.modal-footer
								button.btn.btn-default(type='button', data-dismiss='modal') Close
								button#accept.btn.btn-primary(type='button') Accept
		

			// MODAL DELETE
			#deletemodal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
				.modal-dialog
					.modal-content
						.modal-header
							button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
							h4#myModalLabel.modal-title Remove
						form(action='/staff/delete', method='POST')
							.modal-body
								.container-fluid
									.container-fluid(style='padding:1rem 4rem 1rem 4rem;')
										.row
											.col-md-12
												.form-group
													h4 Delete this staff?
											input.hidden#id(type='text' name='id')

							.modal-footer
								button.btn.btn-default(type='button', data-dismiss='modal') Close
								button.btn.btn-default(type='submit') Delete
			// MODAL CODE
			#code.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
				.modal-dialog
					.modal-content
						.modal-header
							button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
							h4#myModalLabel.modal-title Accept Membership
						form(action='/', method='')
							.modal-body
								.container-fluid
									.row
										.col-md-12
											.form-group
												label.control-label Enter Code
												input.form-control(type='text')
												input.hidden#id(type='text' name='id')

							.modal-footer
								button.btn.btn-default(type='button', data-dismiss='modal') Close
								button.btn.btn-primary(type='submit') Submit


include ../../../../templates/foot
script.
	$('#is-not-student').hide();
	$('#is-student').show();
	$('#accept').click(function(){
		$('#code').modal();
		$('#viewmodal').modal('hide');
	});

    
 