script.
	$(document).ready(function(){
	$('#transactionDrop').addClass('active');
	$('#payment').addClass('active');
	});


	$('#view').click(function(){
		$('#view-modal').modal();
	});
	$('#pay').click(function(){
		$('#pay-modal').modal();
	});