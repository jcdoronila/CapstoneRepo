			form(action='POST', method='')
				.modal-body
					.container-fluid
						.row
							.col-xs-12
								.pull-left
									h1 A-TEAM FITNESS
									address
										strong A-Team Fitness Inc.
										br
										| 4408 Old. Sta. Mesa St, Newton Plaza
										br
										| Sta. Mesa Manila
										br
										abbr(title='Phone') P:
										|  0933 412 7526
								// /pull-left
								.pull-right
									h1
										img.img-circle(src="/assets/img/icon.png", style="width:120px; float:right; margin-top:20px;", alt="")
								// --/pull-right --
								.clearfix
								br
								br
								.row
									.col-md-9
										h4 [NAME OF MEMBER]
